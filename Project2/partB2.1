flow1 = float(input("Enter Flow 1: "))
flow2 = float(input("Enter Flow 2: "))
flow3 = float(input("Enter Flow 3: "))
flow4 = float(input("Enter Flow 4: "))

augMat = createAugmentedMatrix(flow1, flow2, flow3, flow4)

