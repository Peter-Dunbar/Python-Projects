matA = np.array([[1, -1, -1, 1], [2, -3, -5, 4], [-2, -1, -2, 2], [3, -3, -1, 2]])
matAInv = np.linalg.inv(matA)

sequence = readInput(fileName)
matB = createMatB(sequence)
